" encoding
	set encoding=utf-8
" numbers
	set number relativenumber
" position number, document label
	set ruler
" syntax color
	syntax on
" mouse support
	set mouse=a
" autocompletion
	set wildmode=longest,list,full
" dark background
	set background=dark
" auto indenting
	set autoindent
" search highlighting ( "/" to search )
	set hlsearch
" incremental search
	set incsearch
